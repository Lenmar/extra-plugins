@{
    Layout = "";
}
@model SmartStore.LivePersonChat.Models.ConfigurationModel
@using SmartStore.Web.Framework;
	
@using (Html.BeginForm())
{
    
    <div class="alert alert-info">
        @Html.Raw(@T("Plugins.Widgets.LivePersonChat.AdminInstruction"))
    </div>
    
<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.ZoneId)
        </td>
        <td class="adminData">
            @Html.DropDownListFor(model => model.ZoneId, Model.AvailableZones)
            @Html.ValidationMessageFor(model => model.ZoneId)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.ButtonCode)
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.ButtonCode)
            @Html.ValidationMessageFor(model => model.ButtonCode)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.MonitoringCode)
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.MonitoringCode)
            @Html.ValidationMessageFor(model => model.MonitoringCode)
        </td>
    </tr>
    <tr>
		<td class="adminTitle">
			&nbsp;
		</td>
		<td class="adminData">
            <button type="submit" name="save" value="save" class="btn btn-primary">
                <i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
            </button>
        </td>
    </tr>
</table>
}